{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"lib": [ "DOM", "DOM.Iterable", "ESNext" ],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx",
		"typeRoots": [ "./src/types", "../node_modules/@types", "./node_modules/@types", "../node_modules/@testing-library" ],
		"types": [
			"node",
			"jest"
		]
	},
	"include": [ "**/*.tsx", "./jest-setup.ts", "vite-env.d.ts" ],
	"references": [ { "path": "./tsconfig.node.json" } ]
}